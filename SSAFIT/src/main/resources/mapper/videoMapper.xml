<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.ssafit.dao.VideoDao">
    
    <select id="selectAll" resultType="video">
        SELECT * FROM video
    </select>
    
    <select id="selectAllByViews" resultType="video">
        SELECT * FROM video ORDER BY view_cnt desc
    </select>
    
    <select id="selectOne" resultType="video" parameterType="int">
        SELECT * FROM video
        WHERE no = #{no}
    </select>
    
    <select id="selectPart" resultType="video" parameterType="String">
        SELECT * FROM video
        WHERE part = #{part}
        ORDER BY view_cnt desc
    </select>
    
    <update id="updateViewCnt" parameterType="int">
        UPDATE video
        SET
        view_cnt = view_cnt+1
        WHERE no = #{no}
    </update>

</mapper>